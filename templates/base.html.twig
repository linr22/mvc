<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <header class="site-header" style="background-image: url({{ asset('img/monumentValley.jpg') }})">
                <span class="site-title">Linneas Symfony Site</span>
        </header>

        <nav class="main-nav">
            <ul>
                <a href="{{ path('home') }}">Home</a>
                <a href="{{ path('about') }}">About</a>
                <a href="{{ path('report') }}">Report</a>
                <a href="{{ path('lucky') }}">Lucky</a>
            </ul>
        </nav>
        <main>
            {% block main %}
            {% endblock %}
        </main>
        <footer>
            <div class = "copy">
                <hr>
                <p class = "text">Sidan är Copyright &copy; av mig</p>
            </div>
        </footer>
    </body>
</html>
